<h1>Listing Orders</h1>

<%= image_tag("pay2go.jpg") %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr> 
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    
    <tr> 
      <td>ID</td>
      <td>total</td>
    </tr>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.total %></td>
    
